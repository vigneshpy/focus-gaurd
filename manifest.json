{
  "manifest_version": 3,
  "name": "Focus Guard",
  "version": "1.0",
  "description": "Block distracting sites and build better habits",
  "permissions": ["storage", "tabs", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.svg"
  },
  "icons": {
    "48": "icon.svg",
    "128": "icon.svg"
  }
}
